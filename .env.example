# GitHub Configuration
# Create a Personal Access Token with these permissions:
# - repo (full repository access)
# - read:user (read user information)
# - For private repos: full repo access
# - For public repos: public_repo scope is sufficient
GITHUB_TOKEN=your_github_personal_access_token
REPO_OWNER=target_repo_owner
REPO_NAME=target_repo_name
TARGET_USER=username_to_watch_for_issues

# Polling Configuration
POLL_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=INFO